{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}



{% block title %}My cool blog posts{% endblock %}

{% block body %}
<div class="row w-75 m-auto ">
    {% for article in articles %}
    <div class="col-sm-12 d-flex justify-content-center">
        <div class="card w-100 m-2 blog-post">
          <div class="card-body">
            <h5 class="blog-title">{{ article.title }}</h5>
            <h6>Post√© le {{ article.created_at|date("m/d/Y") }}</h6>
            <p class="card-text blog-content">{{ article.first_50_char }} <a href="/blog/{{ article.id }}" >( Voir Plus )</a></p>
          </div>
        </div>
      </div>
    {% endfor %}
</div>
{% endblock %}
